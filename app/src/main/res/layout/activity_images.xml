<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImagesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="249dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/trends"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:minHeight="200dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:tag="curry"
                app:srcCompat="@drawable/curry" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:minHeight="200dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:tag="bibimbap"
                app:srcCompat="@drawable/bibimbap" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:minHeight="200dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:tag="burger"
                app:srcCompat="@drawable/burger" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:minHeight="200dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:tag="spicy_rice_cake"
                app:srcCompat="@drawable/spicy_rice_cake" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:minHeight="200dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:tag="fried_chicken"
                app:srcCompat="@drawable/fried_chicken" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:minHeight="200dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:tag="pancake"
                app:srcCompat="@drawable/pancake" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:minHeight="200dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:tag="pasta"
                app:srcCompat="@drawable/pasta" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:minHeight="200dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:tag="pizza"
                app:srcCompat="@drawable/pizza" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:minHeight="200dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:tag="sushi"
                app:srcCompat="@drawable/sushi" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:minHeight="200dp"
                android:onClick="onClick"
                android:scaleType="centerCrop"
                android:tag="ramen"
                app:srcCompat="@drawable/ramen" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>